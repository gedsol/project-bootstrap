CREATE DATABASE IF NOT EXISTS Gallery CHARACTER SET utf8;
USE Gallery;
CREATE TABLE IF NOT EXISTS Images(
	imageId INT UNSIGNED NOT NULL UNIQUE AUTO_INCREMENT,
	albumId INT UNSIGNED NOT NULL,
 	path VARCHAR(255) NOT NULL UNIQUE, 
 	created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP, 
 	name VARCHAR(255) DEFAULT 'image', 
 	taken DATETIME, 
 	description VARCHAR(255), 
 	PRIMARY KEY(imageId)) 
	ENGINE=InnoDB DEFAULT CHARSET=utf8;
CREATE TABLE IF NOT EXISTS Albums(
	albumId INT UNSIGNED NOT NULL UNIQUE AUTO_INCREMENT,
	created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP, 
	frontImgId INT UNSIGNED NOT NULL,
	description VARCHAR(255),
	description_full TEXT,
	place VARCHAR(255),
	PRIMARY KEY(albumId)) 
	ENGINE=InnoDB DEFAULT CHARSET=utf8;
